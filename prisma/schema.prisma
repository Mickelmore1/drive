generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  folders      Folder[]    
}

model Session {
  id          String      @id
  sid         String   @unique
  data        String   
  expiresAt   DateTime
}

model Folder {
  id        Int @id @default(autoincrement())
  name      String
  user      User @relation(fields: [userid], references: [id])
  userid    String  
}
